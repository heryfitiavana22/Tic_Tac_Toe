        "outDir": "dist",
        "noImplicitAny": true,
        "target": "ES5",
        "allowJs": true,
        "moduleResolution": "node",
        "watch": true,
        "strict": true,
        "experimentalDecorators": true,
        "noEmit": true,
        "sourceMap": true
